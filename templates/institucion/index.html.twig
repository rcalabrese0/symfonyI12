{% extends 'base.html.twig' %}

{% block title %}Institucion index{% endblock %}

{% block body %}
    <h1>Institucion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Domicilio</th>
                <th>Telefono</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for institucion in institucions %}
            <tr>
                <td>{{ institucion.id }}</td>
                <td>{{ institucion.nombre }}</td>
                <td>{{ institucion.domicilio }}</td>
                <td>{{ institucion.telefono }}</td>
                <td>
                    <a href="{{ path('app_institucion_show', {'id': institucion.id}) }}">show</a>
                    <a href="{{ path('app_institucion_edit', {'id': institucion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_institucion_new') }}">Create new</a>
{% endblock %}
